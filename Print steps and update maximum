import java.util.*;
public class Solution{
    public static void main(String[] args){
        Scanner scn = new Scanner(System.in); 
        int maxVal = -100;
        int steps = 0;
        int n = scn.nextInt();
        for(int i=1;i<=n;i++){
            int num = scn.nextInt();
            if (num>maxVal){
                maxVal = num;
                steps++;                
            }
        }
        System.out.println(steps);
    }
}
