import java.util.Scanner;

public class Solution {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        int l = scn.nextInt();
        int b = scn.nextInt();
        if(l>0 && l<(2^31-1) && b>0 && b<(2^31-1));
        {
        System.out.println(l*b);
        System.out.println(2*(l+b));
        }
    }
}
