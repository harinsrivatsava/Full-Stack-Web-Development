import java.util.*;
public class Solution{
    public static void main (String [] args){
        Scanner scn = new Scanner (System.in);
        String s = scn.next();
        int left = 0, right = 0;
        for (int i = 0; i < s.length(); i++){
            if (s.charAt(i) == '('){
                left++;
            }
            else{
                right++;
            }
        }
        int diff = left - right;
        System.out.println (Math.abs(diff));
    }
}
