import java.util.Scanner;
public class Solution {
    public static void main (String [] args){
        Scanner scn = new Scanner (System.in);
        int n = scn.nextInt();
        int high = n, low = 0;
        int ans = 0;
        while (low <= high){
            int mid = low + (high - low) / 2;
            if (mid == n / mid){
                System.out.println (mid);
                return;
            }
            else if (mid < n / mid){
                low = mid + 1;
                ans = mid;
            }
            else{
                high = mid - 1;
            }
        }
        System.out.println (ans);
    }
}
